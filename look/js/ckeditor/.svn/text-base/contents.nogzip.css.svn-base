body
{
	/* Font */
	font-family:Georgia,'Times New Roman',serif;
	font-size: 100%;
	
	/* Text color */
	color:#4b6473;

	/* Remove the background color to make it transparent */
	background-color: #fff;
}

html
{
	/* #3658: [IE6] Editor document has horizontal scrollbar on long lines
	To prevent this misbehavior, we show the scrollbar always */
	_overflow-y: scroll
	line-height:1.4;
}
img {
	border:3px solid #b9d637;
}
img:-moz-broken
{
	-moz-force-broken-image-icon : 1;
	width : 24px;
	height : 24px;
}
table, tr, td, th {
	border:1px solid #2d5973;
	color:#4b6473;
}
img, input, textarea
{
	cursor: default;
}
a {
	color:#00aae7;
}

h1 {
	font-size:250%
}

h2 {
	font-size:200%
}

h3 {
	font-size:150%
}

h4 {
	font-size:100%
}

h5 {
	font-size:70%
}

h6 {
	font-size:50%
}

ul, ol {
	padding-left: 40px;
	margin-top:10px;
	margin-bottom:10px;
}

ul {
	list-style-type:disc;
}

ol {
	list-style-type:decimal;
}

h1, h2, h3, h4, h5, h6, p, blockquote,
 form, label, ul, ol, dl, fieldset, address {
    margin-bottom: 0.8em;
}
